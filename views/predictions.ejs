<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('partials/head') %>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container mt-4">
        <h1 class="text-center mb-4"><%= title %></h1>
        <p class="text-center text-muted mb-4"><%= message %></p>

        <% if (predictions && predictions.length > 0) { %>
            <div class="row">
                <% predictions.forEach(function(prediction) { %>
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="team-info">
                                        <img src="/images/teams/<%= prediction.home_team.toLowerCase().replace(/ /g, '_') %>.png" 
                                             alt="<%= prediction.home_team %>" 
                                             class="team-logo">
                                        <%= prediction.home_team %>
                                    </div>
                                    <div class="score">
                                        <%= prediction.predicted_home_score %> - <%= prediction.predicted_away_score %>
                                    </div>
                                    <div class="team-info text-end">
                                        <%= prediction.away_team %>
                                        <img src="/images/teams/<%= prediction.away_team.toLowerCase().replace(/ /g, '_') %>.png" 
                                             alt="<%= prediction.away_team %>" 
                                             class="team-logo">
                                    </div>
                                </div>
                                <div class="text-center text-muted mt-2">
                                    <%= new Date(prediction.date).toLocaleDateString('fr-FR', { 
                                        weekday: 'long', 
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric' 
                                    }) %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="alert alert-info text-center">
                Aucune pr√©diction disponible pour le moment.
            </div>
        <% } %>
    </div>

    <%- include('partials/footer') %>
</body>
</html>
