<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Matches par Journée</title>
  <!-- Inclusion de Materialize CSS via CDN -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <style>
    body {
      background-color: #f5f5f5;
      padding: 20px;
    }
    .container {
      margin-top: 20px;
    }
    table {
      margin-top: 20px;
    }
    th, td {
      text-align: center;
    }
    .header {
      margin-bottom: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h3 class="header">Matches pour la Journée : <%= round %></h3>
    <% if (matches && matches.length > 0) { %>
      <table class="striped highlight">
        <thead>
          <tr>
            <th>Date</th>
            <th>Domicile</th>
            <th>Extérieur</th>
            <th>Score Domicile</th>
            <th>Score Extérieur</th>
          </tr>
        </thead>
        <tbody>
          <% matches.forEach(function(match) { %>
            <tr>
              <td><%= new Date(match.date).toLocaleDateString("fr-FR") %></td>
              <td><%= match.home_team %></td>
              <td><%= match.away_team %></td>
              <td><%= match.home_score !== null ? match.home_score : "N/A" %></td>
              <td><%= match.away_score !== null ? match.away_score : "N/A" %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <p>Aucun match trouvé pour cette journée.</p>
    <% } %>
    <br>
    <a href="/" class="btn waves-effect waves-light">Retour à l'accueil</a>
  </div>
  <!-- Inclusion de Materialize JS pour les interactions -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>
