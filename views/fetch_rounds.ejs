<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Sélectionnez une Journée</title>
  <!-- Inclusion de Materialize CSS pour un design Material -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <style>
    body {
      padding: 20px;
      background-color: #f5f5f5;
    }
    .card {
      margin-bottom: 20px;
    }
    .center {
      text-align: center;
    }
  </style>
</head>
<body>
  <div class="container">
    <h3 class="center">Sélectionnez une Journée de Prédictions</h3>
    <% if (rounds && rounds.length > 0) { %>
      <div class="row">
        <% rounds.forEach(function(round, index) { %>
          <div class="col s12 m6 l4">
            <div class="card">
              <div class="card-content">
                <span class="card-title"><%= round %></span>
              </div>
              <div class="card-action center">
                <!-- Le lien redirige vers la route /predictions avec roundIndex défini -->
                <a href="/display-matches-by-round?round=<%= round %>" class="btn waves-effect waves-light">
                  Voir les prédictions
                </a>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <p class="center">Aucune journée trouvée.</p>
    <% } %>
    <div class="center" style="margin-top: 20px;">
      <a href="/" class="btn grey lighten-1">Retour à l'accueil</a>
    </div>
  </div>

  <!-- Inclusion de Materialize JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>
